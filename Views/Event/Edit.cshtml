@model CampusCom.Models.EVENTING

@{
    ViewBag.Title = "Edit Event";
    ViewBag.Header = "Judo Lions";
    Layout = "~/Views/Shared/_Community.cshtml";
}

<div class="header-bar">
    <div>
        <h1 class="header-text"> @ViewBag.Header</h1>
        <div class="com-nav">
            <a href="#">Members</a>
            <a href="/Post/Index">Post</a>
            <a href="/Event/Index" class="active-com-nav">Broadcast</a>
            <a href="#">Privacy</a>
            <a href="#">Requests</a>
        </div>
    </div>
</div>

<div id="app-content">
    <div class="actual-content">
        <div class="actual-top">
            <h1>Editing Event</h1>
            <p><small>Change the details of the event you wish to publish</small></p>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.EventId)


            @Html.LabelFor(model => model.ComId, "ComId", htmlAttributes: new { @class = "lbl-form" })
            <br />
            @Html.DropDownList("ComId", null, htmlAttributes: new { @class = "input-cont" })
            @Html.ValidationMessageFor(model => model.ComId, "", new { @class = "text-danger" })


            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "lbl-form" })
            <br />
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "input-cont" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })


            @Html.LabelFor(model => model.EventDate, htmlAttributes: new { @class = "lbl-form" })
            <br />
            @Html.EditorFor(model => model.EventDate, new { htmlAttributes = new { @class = "input-cont" } })
            @Html.ValidationMessageFor(model => model.EventDate, "", new { @class = "text-danger" })


            @Html.LabelFor(model => model.EventDescr, htmlAttributes: new { @class = "lbl-form" })
            <br />
            @Html.EditorFor(model => model.EventDescr, new { htmlAttributes = new { @class = "input-cont" } })
            @Html.ValidationMessageFor(model => model.EventDescr, "", new { @class = "text-danger" })


            @Html.LabelFor(model => model.Venue, htmlAttributes: new { @class = "lbl-form" })
            <br />
            @Html.EditorFor(model => model.Venue, new { htmlAttributes = new { @class = "input-cont" } })
            @Html.ValidationMessageFor(model => model.Venue, "", new { @class = "text-danger" })


            @Html.LabelFor(model => model.Privacy, htmlAttributes: new { @class = "lbl-form" })
            <br />
            @Html.EditorFor(model => model.Privacy, new { htmlAttributes = new { @class = "input-cont" } })
            @Html.ValidationMessageFor(model => model.Privacy, "", new { @class = "text-danger" })

            <div class="submit-btn-div">
                <button type="submit" class="sub-btn">SAVE</button>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
</div>