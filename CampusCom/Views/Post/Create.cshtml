@model CampusCom.Models.POST

@{
    ViewBag.Title = "Post";
    ViewBag.Header = "Judo Lions";
    Layout = "~/Views/Shared/_Community.cshtml";
}

<div class="header-bar">
    <div>
        <h1 class="header-text"> @ViewBag.Header</h1>
        <div class="com-nav">
            <a href="#">Members</a>
            <a href="/Post/Index" class="active-com-nav">Post</a>
            <a href="/Event/Index">Broadcast</a>
            <a href="#">Settings</a>
            <a href="#">Requests</a>
        </div>
    </div>
</div>
<div id="app-content">
    <div class="actual-content">
        <div class="actual-top">
            <h1>Type the Post Below.</h1>
            <p><small>The posts will appear to members of the community</small></p>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @* --#### Start ####--*@
                @Html.LabelFor(model => model.ComId, "ComId", htmlAttributes: new { @class = "lbl-form" })
                <br />
                @Html.DropDownList("ComId", null, htmlAttributes: new { @class = "input-cont" })
                @Html.ValidationMessageFor(model => model.ComId, "", new { @class = "text-danger" })

                @* ---### ---*@
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "lbl-form" })
                <br />
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "input-cont", @placeholder= "e.g. Tech Tips" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })

                @* ---### ---*@
                @Html.LabelFor(model => model.pMessage, htmlAttributes: new { @class = "lbl-form" })

                <br />
                @Html.TextAreaFor(model => model.pMessage, new { htmlAttributes = new { @class = "input-cont", @rows = 10, @cols = 30 } })
                @Html.ValidationMessageFor(model => model.pMessage, "", new { @class = "text-danger" })

                <br />
                @* ---### ---*@
                @Html.LabelFor(model => model.PostDate, htmlAttributes: new { @class = "lbl-form" })

                <br />
                @Html.EditorFor(model => model.PostDate, new { htmlAttributes = new { @class = "input-cont", @placeholder = "dd/mm/yyyy" } })
                @Html.ValidationMessageFor(model => model.PostDate, "", new { @class = "text-danger" })

            </div>

            <div class="submit-btn-div">
                <button type="submit" class="sub-btn">POST</button>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
</div>
